<div style="margin-left: 200px; margin-right: 200px; font-size: 13px">
    <br>
    <h2>Division</h2>
    <br>
    <h4>Delete</h4>
    <br>

    <br>


    <form data-id="{{this.id}}" class="update-form">


        <div class="form-group row form-horizontal">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Code</label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" placeholder="Code" name="Code" id="div_code"
                    value="{{this.div_code}}" style="width: 60px" disabled>
            </div>
            <br><br>
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Name</label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" placeholder="Name" name="Name" id="div_name"
                    value="{{this.div_name}}" style="width: 200px" disabled>
            </div>

        </div>

        <br>
        <button type="submit" class="btn btn-secondary btn-sm" style="margin-top: 25px">Delete</button>

    </form>
    <button class="btn btn-secondary btn-sm" style="margin-top: 25px" onclick="window.history.back()">Cancel</button>
    {{!-- <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
        onclick="window.location.href='/master_division'">Cancel</button> --}}
    <br>

</div>
<br>
<script type="text/javascript">

    $(".update-form").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();


        var id = $(this).data("id");
        // Send the PUT request.
        $.ajax("/b_division_list/" + id, {
            type: "DELETE",

        }).then(
            function () {
                console.log("updated!");
                // Reload the page to get the updated list
                location.assign("/master_division");
            }
        );
    });

    function goBack() {
        window.history.back();
    }

</script>